{
  "name": "wasitraining",
  "version": "1.0.0",
  "author": "Bartosz DÄ™bicki",
  "repository": {
    "type": "git",
    "url": "git://github.com/bdebicki/wasitraining"
  },
  "description": "Was it raining at Open'er festival?",
  "engines": {
    "node": "9.11.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "init": "npm run build:festival-data && npm run build:app",
    "symlink-hooks": "./hooks/symlink-hooks",
    "eslint-check": "eslint ./src ./tools --ext .js",
    "test": "jest",
    "build:app": "webpack",
    "build:festival-data": "node tools/builder-festivalData.js",
    "watch:app": "webpack-dev-server --content-base public",
    "watch:festival-data": "npm-watch build:festival-data"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ],
    "transform": {
      ".*": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true
  },
  "watch": {
    "build:festival-data": {
      "patterns": [
        "src/data/festivals"
      ],
      "extensions": "json",
      "quiet": false
    }
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.13.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^23.4.1",
    "jest-cli": "^23.4.1",
    "less": "^2.7.3",
    "less-loader": "^4.1.0",
    "npm-watch": "^0.3.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2",
    "write-file-webpack-plugin": "^4.3.2"
  }
}
