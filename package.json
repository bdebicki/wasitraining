{
  "name": "wasitraining",
  "version": "1.0.0",
  "author": "Bartosz DÄ™bicki",
  "repository": {
    "type": "git",
    "url": "git://github.com/bdebicki/wasitraining"
  },
  "description": "Was it raining at Open'er festival?",
  "engines": {
    "node": "9.11.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "init": "npm run build:app && npm run build:festival-data",
    "symlink-hooks": "./hooks/symlink-hooks",
    "eslint-check": "eslint ./src ./tools --ext .js",
    "test": "jest",
    "build:app": "webpack --mode production",
    "build:festival-data": "node tools/builder-festivalData.js",
    "watch:app": "webpack-dev-server --content-base public",
    "watch:festival-data": "npm-watch build:festival-data"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      ".*": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true
  },
  "watch": {
    "build:festival-data": {
      "patterns": [
        "src/data/festivals"
      ],
      "extensions": "json",
      "quiet": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "browserslist": "^4.3.4",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.13.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "npm-watch": "^0.3.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "write-file-webpack-plugin": "^4.4.1"
  }
}
